package pages;

import (
	"harmeepatel.dev/web/components"
	"harmeepatel.dev/web/icons"
	"harmeepatel.dev/web/layouts"
)

const (
	iconPath  = "./static/media/icons/"
	iconClass = "w-[12px] sm:w-[14px] xl:w-[18px]"
)

templ Index(title string) {
	@layouts.Base(title) {
		<main id="resume" class="h-vh mx-6 sm:mx-12 3xl:mx-0 mt-4 md:mt-6">
			<h1 class="text-center">Harmee Patel</h1>
			@infoBar()
			@summary()
			@technicalSkills()
			@workex()
			@academicProjects()
			@projects()
			@education()
			<a href="./static/media/HarmeePatel-Resume.pdf" download="HarmeePatel-Resume" aria-label="download resume">
				<button
					type="submit"
					id="download-resume-btn"
					class={ "transition-all duration-[150ms] fixed z-[100] bottom-0 right-0 m-10 xl:m-16 w-10 md:w-12 aspect-square flex items-center justify-center rounded-xl xl:rounded-2xl bg-white/50 dark:bg-black/40 backdrop-blur-[3px] shadow-md ring-1 ring-accent-p md:ring-0 shadow-black/40 dark:shadow-white/30 hover:shadow-accent-p md:hover:ring-2 md:hover:scale-105 md:hover:shadow-lg" }
					aria-label="download resume button"
				>
					@icons.ArrowDownTray(icons.IconInfo{Width: 12, Class: "w-[14px] md:w-[18px]", Alt: "Download button for my resume."})
				</button>
			</a>
		</main>
	}
}

// summary
