// technical skills
templ technicalSkills() {
	{{
	thClass := "text-left align-baseline "
	tdClass := "pl-8 "
	}}
	@components.Section("tech-skills", "Technical Skills") {
		<table>
			<tr>
				<th class={ thClass }>
					<h3 class="inline-block">Languages</h3>
				</th>
				<td class={ tdClass + "pb-4 md:pb-3" }>
					{{ langs := []string{"JavaScript", "TypeScript", "PHP", "Python", "Go", "Zig", "C", "Lua", "Bash"} }}
					for i, lang := range langs {
						@components.LangTag(lang)
						if i < len(langs) - 1 {
							,&nbsp;&nbsp;
						}
					}
				</td>
			</tr>
			<tr>
				<th class={ thClass }>
					<h3 class="inline-block">Database</h3>
				</th>
				<td class={ tdClass + "pb-4 md:pb-3" }>
					{{ dbs := []string{"MySQL", "SQLite", "PostgreSQL"} }}
					for i, db := range dbs {
						@components.LangTag(db)
						if i < len(dbs) - 1 {
							,&nbsp;&nbsp;
						}
					}
				</td>
			</tr>
			<tr>
				<th class={ thClass }>
					<h3 class="inline-block">Technologies</h3>
				</th>
				<td class={ tdClass }>
					{{ techs := []string{"AngularJs", "Astro", "CSS3", "Git", "GithubActions", "HTML5", "JSON", "jQuery", "Keras", "Laravel", "NextJs", "NodeJs", "NumPy", "Pandas", "React", "Redux", "TailwindCSS", "Tensorflow"} }}
					for i, tech := range techs {
						@components.LangTag(tech)
						if i < len(techs) - 1 {
							,&nbsp;&nbsp;
						}
					}
				</td>
			</tr>
		</table>
	}
}

