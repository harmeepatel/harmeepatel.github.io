package components;

import "strconv"

type IconInfo struct {
	Src    string
	Width  int
	Class  string
	Alt    string
}

templ Icon(icon IconInfo) {
	<img
		class={ "dark:filter dark:invert inline " + icon.Class }
		src={ icon.Src }
		alt={ icon.Alt }
		width={ strconv.Itoa(icon.Width) }
	/>
}

templ Section(heading string) {
    <section>
        <h3>{ heading }</h3>
    </section>
}
