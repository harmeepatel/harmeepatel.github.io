package components;

import "harmeepatel.dev/web/icons"

templ Footer(static string, class string) {
	{{
        iconClass := "w-[12px] md:w-[16px] opacity-60 hover:opacity-100"
        infoLinkClass := "!text-black dark:!text-white flex items-center"
	}}
	<footer
		id="footer"
		class={ "max-w-screen-lg w-4/5 m-auto my-4 lg:my-8 bg-light dark:bg-dark ring-1 dark:ring-white/60 ring-black/60 rounded-xl xl:rounded-2xl " + class }
	>
		<div class="py-3.5 px-6 md:py-5 md:px-10">
			<div class="flex justify-center items-center gap-3 md:gap-6 pb-3 sm:pb-6">
                @Link("/", "", infoLinkClass, "HP my name initials") {
                    @icons.HpBlack(icons.IconInfo{Width: 12, Class: "w-[14px] md:w-[20px] h-full opacity-60 hover:opacity-100", Alt: "My initials HP"})
                }
                @Link("tel:+16478321245", "_blank", infoLinkClass, "phone") {
                    @icons.Phone(icons.IconInfo{Width: 12, Class: iconClass, Alt: "Phone icon"})
                }
                @Link("https://github.com/harmeepatel", "_blank", infoLinkClass, "github") {
                    @icons.Github(icons.IconInfo{Width: 12, Class: iconClass, Alt: "Github icon"})
                }
                @Link("https://ca.linkedin.com/in/harmeepatel", "_blank", infoLinkClass, "linkedin") {
                    @icons.Linkedin(icons.IconInfo{Width: 12, Class: iconClass, Alt: "Linkedin icon"})
                }
                @Link("mailto:harmeeworks@gmail.com", "_blank", infoLinkClass, "email") {
                    @icons.Email(icons.IconInfo{Width: 12, Class: iconClass, Alt: "Email icon"})
                }
                @Link("https://www.instagram.com/harmee.png/", "_blank", infoLinkClass, "instagram") {
                    @icons.Ig(icons.IconInfo{Width: 12, Class: iconClass, Alt: "Instagram icon"})
                }
			</div>
			<p class="text-center opacity-60">Â© 2024 Harmee Patel. All rights reserved.</p>
		</div>
	</footer>
}
